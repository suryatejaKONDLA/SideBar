<div class="wrapper @(IsToggled ? "toggled" : "")">
    <aside class="sidebar-wrapper">
        <div class="sidebar-brand">
            <a @onclick="ToggleSidebar" class="sidebar-toggle">
                <i class="fa fa-bars"></i>
            </a>
            <h2>@BrandTitle</h2>
        </div>
        <ul class="sidebar-nav">
            @{
                foreach (var item in MenuItems)
                {
                    <li class="nav-item @(item.IsActive ? "active" : "") @(item.SubMenu.Any() ? "has-submenu" : "")">
                        <a href="@item.Link" @onclick="() => ToggleSubMenu(item)">
                            <i class="fa @item.Icon"></i>
                            <span>@item.Title</span>
                            @{
                                if (item.SubMenu.Any())
                                {
                                    <i class="fa fa-chevron-right arrow"></i>
                                }
                            }
                        </a>
                        @{
                            if (item.SubMenu.Any())
                            {
                                <ul class="submenu" style="display: @(item.IsActive ? "block" : "none")">
                                    @foreach (var subItem in item.SubMenu)
                                    {
                                        <li class="nav-item @(subItem.IsActive ? "active" : "")">
                                            <a href="@subItem.Link">
                                                <span>@subItem.Title</span>
                                            </a>
                                        </li>
                                    }
                                </ul>
                            }
                        }
                    </li>
                }
            }
        </ul>
    </aside>
</div>

<style>
    .wrapper {
        padding-left: 250px;
        transition: all 0.3s ease;
    }

    .sidebar-wrapper {
        position: fixed;
        left: 0;
        top: 0;
        width: 250px;
        height: 100vh;
        background: #000; /* Black background */
        z-index: 1000;
        transition: all 0.3s ease;
        overflow-y: auto;
    }

    .sidebar-brand {
        display: flex;
        align-items: center;
        padding: 20px;
        background: #111; /* Darker black for brand */
        gap: 15px;
    }

        .sidebar-brand h2 {
            color: #fff;
            font-size: 24px;
            margin: 0;
        }

    .sidebar-toggle {
        color: #fff;
        font-size: 20px;
        transition: all 0.3s;
    }

        .sidebar-toggle:hover {
            color: #F8BE12; /* Accent color */
        }

    .sidebar-nav {
        list-style: none;
        padding: 20px 0;
    }

        .sidebar-nav .nav-item a {
            display: flex;
            align-items: center;
            padding: 15px 25px;
            color: #bdc3c7;
            text-decoration: none;
            transition: all 0.3s;
        }

            .sidebar-nav .nav-item a:hover,
            .sidebar-nav .nav-item.active > a {
                background: #111; /* Darker black for active/hover */
                color: #fff;
            }

            .sidebar-nav .nav-item a i {
                margin-right: 15px;
                width: 20px;
            }

    .submenu {
        display: none;
        list-style: none;
        background: #111; /* Darker black for submenu */
        padding-left: 15px;
    }

        .submenu .nav-item a {
            padding: 12px 25px;
            font-size: 14px;
        }

    .arrow {
        margin-left: auto;
        transition: transform 0.3s;
    }

    .active > a > .arrow {
        transform: rotate(90deg);
    }

    .navbar-wrapper {
        background: #000; /* Black navbar */
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        position: fixed;
        top: 0;
        right: 0;
        left: 250px;
        z-index: 999;
        transition: all 0.3s;
        height: 70px;
        display: flex;
        align-items: center;
        padding: 0 20px;
    }

    .content-wrapper {
        margin-top: 70px;
        padding: 20px;
        min-height: calc(100vh - 70px);
        transition: all 0.3s;
    }

    /* Toggled State */
    .wrapper.toggled {
        padding-left: 60px;
    }

        .wrapper.toggled .sidebar-wrapper {
            width: 60px;
        }

        .wrapper.toggled .sidebar-brand h2,
        .wrapper.toggled .sidebar-nav li a span,
        .wrapper.toggled .arrow {
            display: none;
        }

        .wrapper.toggled .sidebar-nav li a {
            justify-content: center;
        }

            .wrapper.toggled .sidebar-nav li a i {
                margin-right: 0;
            }

        .wrapper.toggled .submenu {
            display: none !important;
        }

    /* Mobile Responsive */
    @@media (max-width: 768px) {
        .wrapper {
            padding-left: 0;
        }

        .sidebar-wrapper {
            left: -250px;
        }

        .navbar-wrapper {
            left: 0;
        }

        .wrapper.toggled .sidebar-wrapper {
            left: 0;
            width: 250px;
        }

        .wrapper.toggled {
            padding-left: 0;
        }

        .mobile-toggle {
            display: block !important;
        }
    }

    .mobile-toggle {
        display: none;
        font-size: 20px;
        color: #fff;
    }
</style>